{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AffinityConfiguration": 
  {
    "AffinityProfiles": [
      {
        "Name": "All",
        "AffinityMask": "0x00000000FFFFFFFF"
      },
      {
        "Name": "CCD0",
        "AffinityMask": "0x000000000000FFFF"
      },
      {
        "Name": "CCD1",
        "AffinityMask": "0x00000000FFFF0000"
      }
    ],
    "ProcessAffinities": [
      {
        "ProcessName": "TargetProcessName",
        "Profile": "CCD0",
        "DelayDuration": 30
      }
    ],
    "FolderAffinities": [
      {
        "FolderPath": "TargetFolder. Use as Process.MainModule.ModuleName.Contains(FolderPath)",
        "Profile": "CCD0",
        "DelayDuration": 30
      }
    ]
  }
}
